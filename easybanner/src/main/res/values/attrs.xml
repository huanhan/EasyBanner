<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="dot_indicator">
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_margin" format="dimension" />

        <attr name="sel_indicator_height" format="dimension" />
        <attr name="sel_indicator_width" format="dimension" />

        <attr name="def_color" format="color|reference" />
        <attr name="sel_color" format="color|reference" />

        <attr name="def_is_full" format="boolean" />
        <attr name="sel_is_full" format="boolean" />
        <attr name="stroke_width" format="dimension" />
        <attr name="def_radius" format="dimension" />
        <attr name="sel_radius" format="dimension" />

        <attr name="shape" >
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>



    </declare-styleable>
</resources>